                "${workspaceFolder}/src/surface/rov_gazebo/scripts/ardupilot_gazebo.sh",
                "&&",
                "${workspaceFolder}/src/surface/rov_gazebo/scripts/ardusub.sh"
            ],
            "presentation": {
                "revealProblems": "onProblem"
            },
            "problemMatcher": []
